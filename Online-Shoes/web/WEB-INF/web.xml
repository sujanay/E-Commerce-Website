<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetShoeServlet</servlet-name>
        <servlet-class>Servlets.GetShoeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetShoesServlet</servlet-name>
        <servlet-class>Servlets.GetShoesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateLogin</servlet-name>
        <servlet-class>Servlets.ValidateLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateShoesServlet</servlet-name>
        <servlet-class>Servlets.ValidateShoesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetShoeServlet</servlet-name>
        <url-pattern>/GetShoeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetShoesServlet</servlet-name>
        <url-pattern>/GetShoesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateLogin</servlet-name>
        <url-pattern>/ValidateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateShoesServlet</servlet-name>
        <url-pattern>/ValidateShoesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
